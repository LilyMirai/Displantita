<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3mm"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="382dp"
        android:layout_height="58dp"
        android:text="𝑳𝒊𝒔𝒕𝒂 𝒅𝒆 𝒑𝒍𝒂𝒏𝒕𝒂𝒔"
        android:textAlignment="center"
        android:textColor="#45EF06"
        android:textSize="4mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnagregar"
        android:layout_width="196dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FB05"
        android:text="Agregar Planta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lst_plantas"
        app:layout_constraintVertical_bias="0.0"></Button>

    <ListView
        android:id="@+id/lst_plantas"
        android:layout_width="373dp"
        android:layout_height="514dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></ListView>

</androidx.constraintlayout.widget.ConstraintLayout>
